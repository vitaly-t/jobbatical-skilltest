// out: main.css

html, body
  margin 0
  padding 0
  height 100%
body
  display table
  width 100%
  font-family Helvetica, Arial, sans-serif
  font-weight 200
  color white
#main
  background #ccc
  width 100%
  height 0
  display table-row
.wrapper
  width 820px
  margin 0 auto
  padding 20px 0
  display table
  position relative
footer
  width 100%
  background #13586d
  display table-row
#parta, #partb
  display inline-block
  vertical-align top
  padding 20px
#parta
  background #37aa20
  width 460px // + 20px padding on both sides = 500px
  margin-right 20px
#partd-wrapper
  display table
  width 100%
.partd
  background #236d14
  display inline-block
  text-align center
  padding 20px
  width calc(50% - 50px) // 40px for padding; 10px for middle margin
  &:first-child
    margin-right 20px
#partb
  float right
  background #5290d3
  width 260px // + 20px padding on both sides = 300px

@media screen and (max-width: 840px)
  html, body
    overflow-y hidden
  #partb, #parta, footer
    width 100%
    padding 10px
  #partb
    float none
    margin 0 0 10px
  #parta
    margin 0
  .wrapper
    width calc(100% - 40px) // subtract 10px padding + 10px margin from both sides
    padding 10px
    margin 0
  .partd
    width calc(50% - 45px) // 40px for padding; 5px for middle margin
    &:first-child
      margin-right 10px

@media screen and (max-width: 450px)
  .partd
    width calc(100% - 40px)
    display block
    &:first-child
      margin-bottom 10px
